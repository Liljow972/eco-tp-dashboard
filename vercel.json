{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "regions": ["cdg1"],
  "rewrites": [
    {
      "source": "/admin/clients/:id",
      "destination": "/admin/clients/[id]"
    },
    {
      "source": "/admin/projects/:id", 
      "destination": "/admin/projects/[id]"
    }
  ]
}